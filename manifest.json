{
  "manifest_version": 3,
  "name": "Simple Background Changer",
  "version": "1.0",
  "description": "Changes the background color of web pages to light blue.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}