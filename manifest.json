{
  "manifest_version": 3,
  "name": "Simple Background Changer",
  "version": "1.0",
  "description": "Changes the background color of web pages to light blue and adds an input overlay.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["helpers/visual_effects.js", "events.js", "htmlTemplates.js", "conversationManager.js", "overlays.js", "helpers/outbound.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}